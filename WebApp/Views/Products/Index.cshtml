@model ProductsIndexViewModel

@{
    ViewData["Title"] = "Products";

    var products = await productService.GetAllAsync();
}

<div class="mb-5">
    <a asp-controller="products" asp-action="register" class="m-2">Create new product</a>
</div>

@if (products != null) {
    foreach (var product in products)
    {
        <div class="mb-3">
            <div>@product.Id</div>
            <div>@product.Name</div>
            <div>@product.Price</div>
            <div>@product.Description</div>
        </div>
    }
}

<div style="padding-top: 150px;">
    <partial name="/Views/Partials/FirstPage/_GridCollection.cshtml" model="@Model.All" />
</div>