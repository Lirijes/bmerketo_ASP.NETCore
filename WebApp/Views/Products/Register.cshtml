@model ProductRegistrationViewModel
@{ ViewData["Title"] = "Register a new product"; }

<div class="d-flex justify-content-center">
    <div class="col-6">
        <form  method="post" novalidate enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="input-section">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" id="name-input" />
                <small><span asp-validation-for="Name" class="text-danger"></span></small>
            </div>

            <div class="input-section">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <small><span asp-validation-for="Price" class="text-danger"></span></small>
            </div>

            <div class="input-section">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" id="name-input"></textarea>
                <small><span asp-validation-for="Description" class="text-danger"></span></small>
            </div>

            <div class="input-section mb-4">
                <label asp-for="ImgUrl" class="form-label"></label>
                <input asp-for="ImgUrl" type="file" class="form-control" />
            </div>

            <div class="mb-3"> 
                <select asp-for="CategoryId">@* här får vi in dropdown listan på categorier*@
                    @foreach (var category in await productCategoryService.GetCategoriesAsync())
                    {
                        <option value="@category.Value">@category.Name</option>
                    }
                </select>
            </div>

            <div class="d-grid mt-2">
                <button type="submit" class="btn-theme">CREATE</button>
            </div>

        </form>
    </div>
</div>