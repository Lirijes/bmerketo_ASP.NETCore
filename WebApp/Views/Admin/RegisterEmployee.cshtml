@model RegisterEmployeeViewModel
@{
    ViewData["Title"] = "Register a new account";
}

<div class="container mt-5">
    <div class="d-flex justify-content-center">

        <form method="post" class="col-10 col-xl-6">

            <div asp-validation-summary="ModelOnly"></div>


            <div class="mb-3">
                <select asp-for="Roles.Id">
                    @foreach (var role in await userService.GetRolesAsync())
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Register.FirstName" class="form-label"></label>
                <input asp-for="Register.FirstName" class="form-control" />
                <small class="text-danger"><span asp-validation-for="Register.FirstName"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Register.LastName" class="form-label"></label>
                <input asp-for="Register.LastName" class="form-control" onchange="" />
                <small class="text-danger"><span asp-validation-for="Register.LastName"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Register.Email" class="form-label"></label>
                <input asp-for="Register.Email" class="form-control" />
                <small class="text-danger"><span asp-validation-for="Register.Email"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Register.PhoneNumber" class="form-label"></label>
                <input asp-for="Register.PhoneNumber" class="form-control" />
                <small class="text-danger"><span asp-validation-for="Register.PhoneNumber"></span></small>
            </div>
            <div class="mt-3">
                <div class="d-grid">
                    <button class="btn-theme">REGISTER</button>
                </div>
            </div>
        </form>

    </div>
</div>